<div class="container">
    <h1>Tuning App</h1>
    <div class="controls">
        <button id="base-play">Play</button>
        <label for="base-frequency">基音を聞く (442Hz)</label>
    </div>
    <div class="sliders">
        <div class="slider-container">
            <label for="left-string">左の弦</label>
            <input type="range" id="left-string" class="slider" min="430" max="450" step="0.05">
        </div>
        <div class="slider-container">
            <label for="base-string">基音の弦</label>
            <input type="range" id="base-string" class="slider" min="430" max="450" step="0.05">
        </div>
        <div class="slider-container">
            <label for="right-string">右の弦</label>
            <input type="range" id="right-string" class="slider" min="430" max="450" step="0.05">
        </div>
    </div>
    <div class="save-controls">
        <button id="save">保存</button>
        <button id="play-unison">作ったユニゾンを聞く</button>
    </div>
</div>
